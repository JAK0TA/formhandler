{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "preserve",
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["Resources/**/*.ts", "Resources/**/*.tsx"]
}
